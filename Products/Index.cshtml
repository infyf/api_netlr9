@model IEnumerable<lr9api.Models.Product>

<h1>Список продуктів</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Назва</th>
            <th>Ціна</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ID</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("0.00")</td>
            </tr>
        }
    </tbody>
</table>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ccc;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

</style>

<div>
    <form method="get" action="/Weather/CurrentWeather">
        <label for="region">Оберіть місто:</label>
        <select id="region" name="region">
            <option value="">-- Виберіть місто --</option>
            <option value="Київ">Київ</option>
            <option value="Львів">Львів</option>
            <option value="Одеса">Одеса</option>
            <option value="Дніпро">Дніпро</option>
            <option value="Харків">Харків</option>
            <option value="Запоріжжя">Запоріжжя</option>
            <option value="Чернівці">Чернівці</option>
            <option value="Рівне">Рівне</option>
        </select>
    

        <button type="submit" class="weather-button">Переглянути погоду</button>
    </form>
</div>
